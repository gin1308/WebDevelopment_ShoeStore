<div class="content_section">

    <h2>Product Details</h2>

    @model PhatTrienWeb_Project_NguyenThanhLoc.Models.SanPham
    <div class="product_box margin_r40">
        <div class="image_wrapper" href="#"><img style="width:240px; height:120px" src="@Model.Anh" /></div>
        <h3>@Model.TenSP</h3>
    </div>

    <div class="col col_13 no_margin_right">
        <table>
            <tr>
                <td height="30" width="160">Price:</td>
                <td>@Model.Gia $</td>
            </tr>
            <tr>
                <td height="30">Availability:</td>
                <td>In Stock</td>
            </tr>
            <tr>
                <td height="30">Model:</td>
                <td>100% Authentic</td>
            </tr>
            <tr>
                <td height="30">Product Code:</td>
                <td>@Model.MaSP</td>
            </tr>
            <tr>
                <td height="30">Quantity</td>
                <td>@Model.SoLuong</td>
            </tr>
            <tr>
                <td height="30"><a href="@Url.Action("AddItem", "Cart", new { productID = Model.MaSP, Quantity = 1 })" class="glyphicon-shopping-cart">Add to Cart</a></td>
                <td><a href="@Url.Action("Index", "Home")">Back to list</a></td>
            </tr>
        </table>
        <div class="cleaner h20"></div>

    </div>

    <div class="cleaner_h30"></div>

    <h3><strong>Product Description</strong></h3>
    <p>@Model.MoTa</p>

    <div class="cleaner"></div>

    <div class="cleaner_h40"></div>

</div>



