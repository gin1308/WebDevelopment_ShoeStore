<body>
    <div id="templatemo_menu_wrapper">

        <div id="templatemo_menu">

            <ul>
                <li><a href="http://localhost:51346/" class="current">Home</a></li>
                <li><a href="#">CSS</a></li>
                <li><a href="#">Flash</a></li>
                <li><a href="#">Gallery</a></li>
                <li><a href="http://localhost:51346/home/about">About</a></li>
                <li><a href="http://localhost:51346/home/contact">Contact</a></li>
                <li><a href="@Url.Action("Login", "User")">Account</a></li>
            </ul>

        </div> <!-- end of templatemo_menu -->

    </div> <!-- end of templatemo_menu_wrapper -->

    <div id="templatemo_header_wrapper">

        <div id="templatemo_header">

            <div id="site_title">

                <h1>
                    <a href="/" ref="nofollow">
                        <img src="~/images/templatemo_logo.png" alt="Site Title" />
                        <span>free css template</span>
                    </a>
                </h1>

            </div> <!-- end of site_title -->

        </div> <!-- end of templatemo_header -->

    </div> <!-- end of templatemo_header_wrapper -->

    @RenderSection("Slider", false)

    <div id="templatemo_content_wrapper">

        <div id="templatmeo_sidebar">
            <div class="sidebar_section">

                <h2>Personal</h2>

                <div class="sidebar_section_content">

                    <ul class="categories_list">
                        @RenderSection("Account", false)

                        @if (Session["Haha"] != null)
                        {
                            <li><a>Hello, @Session["Haha"]!</a></li>
                            <li><a href="@Url.Action("Logout", "User")">Log Out</a></li>
                        }
                    </ul>
                </div>
            </div>

            <div class="sidebar_section">

                <h2>Shopping Cart</h2>

                <div class="sidebar_section_content">
                    <ul class="categories_list">
                        <li><a href="@Url.Action("Index", "Cart")">Cart</a></li>
                    </ul>
                </div>

                @{ Html.RenderAction("CartInfor", "Cart"); }

            </div>

            <div class="sidebar_section">
                <h2>Search Any Item</h2>
                <div class="sidebar_section_content">

                    <form action="#" method="get">
                        <input type="text" value="Enter a keyword..." name="q" size="10" id="searchfield" title="searchfield" onfocus="clearText(this)" onblur="clearText(this)" />
                        <input type="submit" name="Search" value="Search" alt="Search" id="searchbutton" title="Search" />
                    </form>
                </div>
                <div class="cleaner"></div>
            </div>

            <div class="sidebar_section">

                <h2>Categories</h2>

                @Html.Action("Category", "Home")
            </div>

        </div> <!-- end of templatemo_slider -->

        <div id="templatemo_content">

            @RenderBody()

        </div> <!-- end of templatemo_content -->

        <div class="cleaner"></div>

    </div> <!-- end of templatemo_content_wrapper -->
    <div id="templatemo_content_wrapper_bottom"></div>

    <div id="templatemo_footer">

        <ul class="footer_menu">
            <li><a href="#">Home</a></li>
            <li><a href="#">Products</a></li>
            <li><a href="#">News</a></li>
            <li><a href="#">Gallery</a></li>
            <li class="last_menu"><a href="#">Contact</a></li>
