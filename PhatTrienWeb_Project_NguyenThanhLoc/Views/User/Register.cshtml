<style>
    /* Add padding to containers */
    .text-danger {
        color: red;
    }

    .container {
        padding: 15px;
        background-color: white;
    }

    /* Full-width input fields */
    input[type=text], input[type=password], input[type=email], input[type=tel], input[type=date] {
        width: 96%;
        padding: 10px;
        margin: 5px 0 10px 0;
        display: inline-block;
    }

    /* Overwrite default styles of hr */
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* Set a style for the submit button */
    .registerbtn {
        background-color: #128EB5;
        color: white;
        padding: 16px 10px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
    }

        .registerbtn:hover {
            opacity: 1;
        }

    /* Add a blue text color to links */
    a {
        color: dodgerblue;
    }

    /* Set a grey background color and center the text of the "sign in" section */
    .signin {
        background-color: #f1f1f1;
        text-align: center;
    }
</style>

<div class="content_section">
    <h2>Register</h2>

    <form action="Register" method="post" class="form-horizontal" role="form">
        <div class="container">

            <h1>Create a new account.</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <div>
                <label for="UserName"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="username" id="username">
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

            </div>

            <div>
                <label for="Email"><b>Email</b></label>
                <input type="email" placeholder="Enter Email" name="email" id="email">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="Password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" id="password">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="ConfirmPassword"><b>Confirm Password</b></label>
                <input type="password" placeholder="Confirm Password" name="confirmpassword" id="confirmpassword">
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for=""><b>Full Name</b></label>
                <input type="text" placeholder="Enter Full Name" name="fullname" id="fullname">
            </div>

            <div>
                <label for="DateOfBirth"><b>Date of Birth</b></label>
                <input type="date" placeholder="Enter DoB" name="dateofbirth" id="dateofbirth">
                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="PhoneNumber"><b>Phone Number</b></label>
                <input type="tel" placeholder="Enter Phone Number" name="phonenumber" id="phonenumber">
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="Address"><b>Address</b></label>
                <input type="text" placeholder="Enter Address" name="address" id="address">
            </div>

            <hr>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

            <button type="submit" class="registerbtn">Register</button>
        </div>      
    </form>
</div>

